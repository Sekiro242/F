@model AirPort.Models.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "EditBooking";
}

<h1>EditBooking</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="FlightID" class="control-label"></label>
                <select asp-for="FlightID" class="form-control" asp-items="ViewBag.FlightID">

                    @foreach (var item in Model.flights)
                    {
                        <option value="@item.FlightId">@item.FlightNumber</option>
                    }

                </select>
                <span asp-validation-for="FlightID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerID" class="control-label"></label>
                <select asp-for="PassengerID" class="form-control" asp-items="ViewBag.PassengerID">

                    @foreach (var item in Model.passenger)
                    {
                        <option value="@item.PassengerID">@item.PassengerName</option>
                    }

                </select>
                <span asp-validation-for="PassengerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
